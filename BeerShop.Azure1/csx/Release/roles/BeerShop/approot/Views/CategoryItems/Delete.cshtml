@model BeerShop.Models.CategoryItem
@{
    ViewBag.Title = "Delete";
}
<h2>
    Delete this subcategory</h2>
<br />
<p class="text-info">
    Are you sure you want to delete it?</p>
<fieldset>
    <div>
        <div class="editor-label">
            <label>
                <strong>Name:</strong>
            </label>
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.name)
        </div>
        <div class="editor-label">
            <label>
                <strong>From:</strong>
            </label>
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.category.name) category
        </div>
    </div>
</fieldset>
<br />
@using (Html.BeginForm())
{
    <div>
        @Html.ActionLink("Back", "Index", "", new { @class = "btn" })
        <button type="submit" class="btn btn-primary">
            Delete</button>
    </div>
}
