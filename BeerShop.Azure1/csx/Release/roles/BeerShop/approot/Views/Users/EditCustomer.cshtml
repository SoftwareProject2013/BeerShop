@model BeerShop.Models.Customer

@{
    ViewBag.Title = "EditCustomer";
}

<h2>My Account</h2>
<br />
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>User</legend>

        @Html.HiddenFor(model => model.UserID)

                <div class="editor-label">
                    <label>
                        <strong>First Name: </strong>
                    </label>
                </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.firstName)
            @Html.ValidationMessageFor(model => model.firstName)
        </div>

                <div class="editor-label">
                    <label>
                        <strong>Last Name: </strong>
                    </label>
                </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.lastName)
            @Html.ValidationMessageFor(model => model.lastName)
        </div>

                <div class="editor-label">
                    <label>
                        <strong>eMail: </strong>
                    </label>
                </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.email)
            @Html.ValidationMessageFor(model => model.email)
        </div>

        <div class="editor-field">
            @Html.HiddenFor(model => model.password)
                        @Html.HiddenFor(model => model.passwordSalt)
        </div>

                <div class="editor-label">
                    <label>
                        <strong>Phone Number: </strong>
                    </label>
                </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.phone)
            @Html.ValidationMessageFor(model => model.phone)
        </div>

                <div class="editor-label">
                    <label>
                        <strong>Address: </strong>
                    </label>
                </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.address)
            @Html.ValidationMessageFor(model => model.address)
        </div>

        @Html.HiddenFor(model => model.birth)
        @Html.HiddenFor(model => model.basket.BasketID)

 

                <div align = "right">
                    @Html.ActionLink("Back", "Index", "Home", new { @class = "btn" })
                    <button type="submit" class="btn btn-primary">
                        Save</button>
                </div>
                <br />
                   </fieldset>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
