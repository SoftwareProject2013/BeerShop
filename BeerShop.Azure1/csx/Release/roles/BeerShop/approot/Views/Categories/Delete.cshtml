@model BeerShop.Models.Category
@{
    ViewBag.Title = "Delete";
}
<h2>
    Delete this category</h2>
<br />
<p class="text-info">
    Are you sure you want to delete it?</p>
<fieldset>
    <div>
        <div class="editor-label">
            <label>
                <strong>Name:</strong>
            </label>
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.name)
        </div>
    </div>
</fieldset>
<br />
@using (Html.BeginForm())
{
            <div>
                <button class="btn">@Html.ActionLink("Back", "Index")</button>
                <button type="submit" class="btn btn-primary">
                    Delete</button>
            </div>
}
