@model IEnumerable<BeerShop.Models.Category>
@{
    ViewBag.Title = "Index";
}
<h2>
    Subcategory Index</h2>
<br />
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn " })
</p>
<br />
<div class="row">
    <div class="span6">
        <table class="table table-striped">
            @foreach (var category in Model)
            {
                <tr>
                    <th>
                        <strong>@Html.DisplayName(category.name)</strong>
                    </th>
                    <th>
                    </th>
                    <th>
                    </th>
                </tr>
                foreach (var categoryItem in category.categories)
                {
                <tr>
                    <td>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => categoryItem.name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = categoryItem.CategoryItemID }, new { @class = "btn btn-small" })
                        @Html.ActionLink("Delete", "Delete", new { id = categoryItem.CategoryItemID }, new { @class = "btn btn-small" })
                    </td>
                </tr>
                }
            }
        </table>
    </div>
</div>
<div align="right">
    @Html.ActionLink("Back", "Index", "Home" , null, new { @class = "btn " })
    
</div>
<br />
