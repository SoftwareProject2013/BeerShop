@using System.Web.Optimization
@using BootstrapSupport
@using NavigationRoutes
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Le styles -->
    @Styles.Render("~/Content/themes/base/css", "~/Content/css")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <style>
        body
        {
            padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
    </style>
    <link href="~/Content/bootstrap-responsive.min.css" rel="stylesheet">
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="~/Content/icons/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/Content/icons/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/Content/icons/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/Content/icons/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="~/Content/icons/apple-touch-icon-57-precomposed.png">
</head>
<body>
    <div class="navbar  navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container large">
                </a><a class="brand" href="/">TheBeerShop</a>
                <div class="nav-collapse collapse navbar-inverse-collapse">
                    <ul class="nav">
                    </ul>
                    <ul class="nav pull-right">
                        @if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Create new worker", "CreateWorker", "Users")</li>
                            @Html.Navigation()

                        }
                        @if (User.IsInRole("Customer"))
                        {
                            
                            <li>@Html.ActionLink("My Basket", "Details", "Baskets")</li>
                            <li>@Html.ActionLink("My Order", "Index", "Orders")</li>
                            <li>@Html.ActionLink("Edit Account", "EditCustomer", "Users")</li>
                        }
                        @if (User.IsInRole("Admin") || User.IsInRole("Customer"))
                        {
                            <li>@Html.ActionLink("Change password", "ChangePassword", "Users")</li>
                            <li>@Html.ActionLink("Log Out", "LogOut", "Users")</li>
                                
                 
                        }
                        else
                        {
                            <li>@Html.ActionLink("Log in", "Login", "Users")</li>
                            <li>@Html.ActionLink("Register", "CreateCustomer", "Users")</li>
                        }
                        <li></li>
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>
    <div>
    </div>
    <div class="container">
        @RenderBody()
    </div>
    <!-- /container -->
    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
<foot>
<div class="row" align="center">
        </br>TheBeerShop Group 2013
</div>
</foot>
</html>
