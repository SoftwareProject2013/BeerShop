@model IEnumerable<BeerShop.Models.Item>
@{
    ViewBag.Title = "Home Page";
}
@helper helperURL(string myurl)
    {
        if (myurl != null)
        {
    @myurl
        }
}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span3">
            <img src="~/Images/img04.jpg" class="img-circle" />
        </div>
        <div class="span8"  align="center">
            <img src="/Images/img05.jpg"  />
        </div>
    </div>
    <div class="row-fluid">
        <div class="span3">
            <br />
            @Html.ActionLink("Show all beers", "Index", "Items")
            <br />
            <br />
            @{Html.RenderPartial("_SearchingBeerForm");}
            <br />
            <div class="row-fluid">
                <div class="span1">
                </div>
                <div class="span11">
                    @{Html.RenderAction("menu", "Items");}
                </div>
                <!--Sidebar content-->
            </div>
        </div>
        <div class="span8" >
            <br />
            <h1 class="title" align="center">
                Welcome to <strong>TheBeerShop</strong></h1>
            <br />
            <div class="span12" class="post">
                <h2 class="title">
                    Special offer</h2>
                <p class="text-warning">
                    <strong><em>50% on the @ViewBag.SpecialOffer.name . 3 days left !</em></strong></p>
                <div class="row" style="padding-left: 35px">
                    <div class="span4">
                        @if (ViewBag.SpecialOffer != null && @ViewBag.SpecialOffer.imageURL.Length > 0)
                        {
                            <img src=@ViewBag.SpecialOffer.imageURL style="width:250px;height:250px;border:2px solid black"; onclick="location.href='@Url.Action("details", "items", new { id = ViewBag.SpecialOffer.ItemID })'" />
                        }
                        else
                        {
                            <img src="http://upload.wikimedia.org/wikipedia/commons/e/e3/NCI_Visuals_Food_Beer.jpg" style="width:250px;height:250px;border:2px solid black"; onclick="location.href='@Url.Action("details", "items", new { id = ViewBag.SpecialOffer.ItemID })'" />
                        }
                        <div class="meta">
                            <em>
                                <p class="date">
                                    Posted on May 24, 2013 by Admin</p>
                            </em>
                        </div>
                    </div>
                    <div class="span8">
                        <h3>@ViewBag.SpecialOffer.name</h3>
                        <p align="justify">
                            Description : @ViewBag.SpecialOffer.description</p>
                    </div>
                </div>
            </div>
            <br />
            <div class="span12" class="post">
                <h2 class="title" align="right">
                    Beer of the month</h2>
                <p align="right" class="text-warning">
                    <strong><em>This month our selection is the @ViewBag.BeerMonth.name. Come and try!</em> </strong>
                    <div class="row" style="padding-left: 35px">
                        <div class="span7">
                            <div class="meta">
                                <h3>@ViewBag.BeerMonth.name</h3>
                                <p align="justify">
                                    Description : @ViewBag.BeerMonth.description</p>
                            </div>
                        </div>
                        <div class="span5">
                            @if (ViewBag.BeerMonth != null && @ViewBag.BeerMonth.imageURL.Length > 0)
                        {
                            <img src=@ViewBag.BeerMonth.imageURL style="width:250px;height:250px;border:2px solid black"; onclick="location.href='@Url.Action("details", "items", new { id = ViewBag.BeerMonth.ItemID })'" />
                        }
                        else
                        {
                            <img src="http://upload.wikimedia.org/wikipedia/commons/e/e3/NCI_Visuals_Food_Beer.jpg" style="width:250px;height:250px;border:2px solid black"; onclick="location.href='@Url.Action("details", "items", new { id = ViewBag.BeerMonths.ItemID })'" />
                        }
                            <div class="meta">
                                <em>
                                    <p class="date" align="right">
                                        Posted on May 24, 2013 by Admin</p>
                                </em>
                            </div>
                        </div>
                    </div>
            </div>
            <!--Body content-->
        </div>
    </div>
</div>
