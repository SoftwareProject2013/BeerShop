@model BeerShop.Models.ModelViewCategoryItem
@{
    ViewBag.Title = "Edit";
}
<h2>
    Edit Subcategory</h2>
<br />
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <div>
            <div class="editor-label">
                <label>
                    <strong>Name:</strong>
                </label>
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.categoryItem.name)
                @Html.ValidationMessageFor(model => model.categoryItem.name)
            </div>
            <div class="editor-label">
                <label>
                    <strong>Select Category:</strong>
                </label>
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => model.selectedCategoryItem, ViewBag.selectCategoryItemList as SelectList)
            </div>
            <br />
            <div>
            <button class="btn">@Html.ActionLink("Back", "Index", "Home")</button>
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
