@model IEnumerable<BeerShop.Models.Category>
@{
    ViewBag.Title = "Index";
}
<h2>
    Category Index</h2>
<br />
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn " })
</p>
<br />
<div class="row">
    <div class="span6">
        <table class="table table-striped">
            <tr>
                <th>
                    Name
                </th>
                <th>
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        <button class="btn btn-small" type="button">@Html.ActionLink("Edit", "Edit", new { id = item.CategoryID })</button>
                        <button class="btn btn-small" type="button">@Html.ActionLink("Delete", "Delete", new { id = item.CategoryID })</button>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
<div align="right">
    @Html.ActionLink("Back", "Index", "Home",null, new { @class = "btn " })
    
</div>
<br />
