@model IEnumerable<BeerShop.Models.Basket>
@{
    ViewBag.Title = "Index";
}
<h2>
    Index of Baskets</h2>
<div class="row">
    <div class="span6">
        <table class="table table-striped">
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Sum price
                </th>
                <th>
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BasketID)
                    </td>
                    <td>
                        @(item.sum())
                    </td>
                    <td>
                        <button class="btn btn-small" type="button">@Html.ActionLink("Details", "Details", new { id = item.BasketID })</button>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
<div align="right">
    @Html.ActionLink("Back", "Index", "home", null, new { @class = "btn" })
</div>
<br />
