@model BeerShop.Models.ItemCategoryHelper


@using (Html.BeginForm("Create", "Comments"))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Comment</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.comment.content)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.comment.content)
            @Html.ValidationMessageFor(model => model.comment.content)
        </div>
            
            @Html.HiddenFor(model => model.item.ItemID)
    

        <p>
            <input type="submit" value="AddComment" />
        </p>
    </fieldset>
}
