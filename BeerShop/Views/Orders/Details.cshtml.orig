@model BeerShop.Models.Order
@{
    ViewBag.Title = "Details";
}
@if (Model == null)
{
    <div>
        No orders in the list
    </div>
}
else
{
    <div>
        <br />
        <fieldset>
            <h4>
                Order details</h4>
    <br />
    <table class="table table-striped">
                <tr>
                    <th>
                        Order ID
                    </th>
                    <th>
                        Full name
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Created Date
                    </th>
                    <th>
                        Dispached Date
                    </th>
                    <th>
                        Delivered Date
                    </th>
        <tr>
            <th>
                Order ID
            </th>
            <th>
                Full name
            </th>
            <th>
                Status
            </th>
            <th>
                Created Date
            </th>
            <th>
                Dispached Date
            </th>
            <th>
                Delivered Date
            </th>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.OrderID)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.customer.firstName)
                        @Html.DisplayFor(model => model.customer.lastName)
                    </td>
                    <td>
                        @{int st = Model.status; switch (st)
                          {
                              case 1: @:pending
                          break;
                              case 2: @:processing
                          break;
                              case 3: @:dispached
                          break;
                              case 4: @:delivered
                          break;
                              case 5: @:canceled
                          break;
                      case 6: @:paying
                          break;
                              default: @:wtf
                          break;
                          }
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.createdDate)
                    </td>
                    <td>
                @if (Model.dispachedDate.Date == new DateTime(9999, 12, 31))
                { 
                    @:Not Dispached Yet
                }
                else
                {
                    @Html.DisplayFor(model => model.dispachedDate)
                }
                    </td>
                    <td>
                @if (Model.deliveredDate.Date == new DateTime(9999, 12, 31))
                { 
                    @:Not Delivered Yet
                }
                else
                {
                    @Html.DisplayFor(model => model.deliveredDate)
                }
                    </td>
                </tr>
            </table>
        </fieldset>
<hr width="75%" />
<fieldset>
    <div class="row">
        <div class="span6">
            <h4>
                User details</h4>
            <br />
            <strong>Complete name: </strong>
            @Html.DisplayFor(model => model.customer.firstName)
            @Html.DisplayFor(model => model.customer.lastName)
            <br />
            <strong>eMail: </strong>
            @Html.DisplayFor(model => model.customer.email)
            <br />
            <strong>Phone Number:</strong>
            @Html.DisplayFor(model => model.customer.phone)
            <br />
            <strong>Date of Birth:</strong>
            @Html.DisplayFor(model => model.customer.birth)
            <br />
        </div>
        <div class="span6">
            <h4>
                Delivery details</h4>
            <br />
            <strong>address:</strong>
            @Html.DisplayFor(model => model.customer.address)
            <hr width="75%" />
            <h4>
                Payment details</h4>
            <br />
            <p class="text-info">
                You can view your paypal payment acount in the next link
            <button class="btn">
                <a href="https://www.sandbox.paypal.com/dk/cgi-bin/webscr?cmd=_login-submit">Log in</a></button></p>
        </div>
    </div>
</fieldset>
<fieldset>
    <hr width="75%" />
    <h4>
        Purchase details</h4>
    <div>
        <table class="table table-striped">
            <tr>
                <th>
                    Item
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Price per item
                </th>
                <th>
                    Price sum
                </th>
            </tr>
            @foreach (var oI in Model.orderItems)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => oI.item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(model => oI.amount)
                    </td>
                    <td>
                        @Html.DisplayFor(model => oI.price)
                    </td>
                    <td>
                        @(oI.sum(true))
                    </td>
                </tr>
            }
            <tr>
                <td>
                </td>
                <td>
                </td>
                <td>
                <strong>Overal sum:</strong>
                </td>
                <td>
                    <strong>@ViewBag.totalPrice</strong>
                </td>
            </tr>
        </table>
    </div>
</fieldset> 
    <div align="right">
        @Html.ActionLink("Back", "Index", null,  new { @class = "btn " })
    </div>
    <br />

